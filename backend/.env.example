# Django Settings
SECRET_KEY=django-insecure-change-me-in-production
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (for local development with docker-compose db)
# Use localhost when running backend locally, docker-compose overrides this for containerized backend
DATABASE_URL=postgres://postgres:password@localhost:5432/app_db

# Redis (for local development with docker-compose redis)
# Use localhost when running backend locally, docker-compose overrides this for containerized backend
REDIS_URL=redis://localhost:6379/0

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=3600
JWT_REFRESH_TOKEN_LIFETIME=604800

# OAuth2 Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
KAKAO_CLIENT_ID=your-kakao-client-id
KAKAO_CLIENT_SECRET=your-kakao-client-secret

# Gemini API Configuration (Optional - for AI features)
GEMINI_API_KEY=your-gemini-api-key
